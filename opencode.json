{
  "$schema": "https://opencode.ai/config.json",
  "lsp": false,
  "autoupdate": false,
  "share": "disabled",
  "tui": {},
  "username": "code",
  "small_model": "zhipuai-coding-plan/glm-4.5-flash",
  "disabled_providers": ["moonshotai", "minimax", "zai", "zai-coding-plan", "zhipuai", "opencode"],
  "provider": {
    "minimax-cn": {
      "models": {
      }
    },
    "zhipuai-coding-plan": {
      "models": {
      }
    },
    "openai": {
      "name": "Right Code",
      "options": {
        "baseURL": "https://www.right.codes/codex/v1",
        "apiKey": "{env:RIGHTCODE_API_KEY}"
      },
      "models": {
        "gpt-5.2": {
          "options": {
            "store": false
          }
        },
        "gpt-5.2-codex": {
          "options": {
            "store": false
          }
        }
      }
    },
    "Mify-OpenAI": {
      "npm": "@ai-sdk/openai",
      "name": "Mify-OpenAI",
      "options": {
        "baseURL": "http://model.mify.ai.srv/v1/",
        "apiKey": "{env:MIFY_API_KEY}"
      },
      "models": {
        "azure_openai/gpt-5.2-codex": {
          "name": "GPT-5.2-Codex",
          "modalities": {
            "input": ["text", "image"],
            "output": ["text"]
          },
          "limit": {
            "context": 400000,
            "input": 272000,
            "output": 128000
          },
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 16000
            }
          }
        }
      }
    },
  },
  "mcp": {
    "mini": {
      "type": "local",
      "command": ["uvx", "minimax-coding-plan-mcp", "-y"],
      "environment": {
        "MINIMAX_API_KEY": "{env:MINIMAX_API_KEY}",
        "MINIMAX_API_HOST": "https://api.minimaxi.com"
      }
    },
    "web-search": {
      "type": "remote",
      "enabled": false,
      "url": "https://open.bigmodel.cn/api/mcp/web_search_prime/mcp",
      "headers": {
        "Authorization": "Bearer {env:ZHIPU_API_KEY}"
      }
    },
    "vision": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@z_ai/mcp-server"
      ],
      "environment": {
        "Z_AI_API_KEY": "{env:ZHIPU_API_KEY}",
        "Z_AI_MODE": "ZHIPU"
      }
    },
    "playwright": {
      "type": "local",
      "command": [
        "npx",
        "@playwright/mcp@latest",
        "--headless"
      ],
      "enabled": false
    }
  }
}
